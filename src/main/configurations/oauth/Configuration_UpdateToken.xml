<Module>
    <SendMessageJob name="UpdateTokenOnStartup" interval="0" javaListener="UpdateTokenOnStartupListener" active="${brp.oauth.enabled}"/>
    <SendMessageJob name="UpdateTokenEvery9Minutes" cronExpression="0 0/9 * ? * * *" javaListener="UpdateTokenListener" active="${brp.oauth.enabled}"/>
    <Adapter name="UpdateToken">
        <Receiver name="UpdateTokenReceiver">
            <JavaListener name="UpdateTokenListener" returnedSessionKeys="token" />
        </Receiver>

        <Pipeline>
            <Exits>
                <Exit name="SUCCESS" state="SUCCESS" />
                <Exit name="ERROR" state="ERROR" />
            </Exits>

            <!-- Request an authorization token -->
            <SenderPipe name="BrpAuthorizationRequest" active="${brp.oauth.enabled}">
                <HttpSender
                        url="${oauth.token.url}"
                        methodType="POST"
                        contentType="application/x-www-form-urlencoded"
                        postType="URLENCODED"
                        headersParams="Accept, Content-Type"
                        treatInputMessageAsParameters="false"
                        clientAlias="oauth.credentials">
                    <Param name="grant_type" value="client_credentials" />
                    <Param name="scope" value="${oauth.scope}" hidden="true"/>
                    <Param name="resourceServer" value="ResourceServer01" />
                    <Param name="Accept" value="application/json" />
                    <Param name="Content-Type" value="application/x-www-form-urlencoded" />
                </HttpSender>

                <Forward name="400" path="ERROR" />
                <Forward name="401" path="ERROR" />
                <Forward name="500" path="ERROR" />
            </SenderPipe>

            <!-- Parse the response -->
            <JsonValidatorPipe name="BrpBpTokenResponseValidator"
                               schema="BrpBpTokenResponseValidator.json" active="${brp.oauth.enabled}">
                <Forward name="failure" path="ERROR" />
            </JsonValidatorPipe>

            <!-- Extract and store required data from the response -->
            <JsonPipe name="JsonToXml" active="${brp.oauth.enabled}" />
            <XsltPipe name="TokenExtractor" xpathExpression="/root/access_token" storeResultInSessionKey="token" active="${brp.oauth.enabled}" />

            <LocalFileSystemPipe name="WriteTokenToFile" filename="token.txt" action="write" overwrite="true" active="${brp.oauth.enabled}" />

            <EchoPipe name="PreventEmptyPipe" />
        </Pipeline>
    </Adapter>
    <Adapter name="UpdateTokenOnStartup">
        <Receiver name="UpdateTokenOnStartupReceiver">
            <JavaListener name="UpdateTokenOnStartupListener"/>
        </Receiver>

        <Pipeline>
            <LocalFileSystemPipe name="CreateTokenFile" action="create" filename="token.txt"/>
            <SenderPipe name="UpdateToken">
                <IbisLocalSender name="UpdateTokenSender" javaListener="UpdateTokenListener"/>
            </SenderPipe>
        </Pipeline>
    </Adapter>
</Module>
