<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../FrankConfig.xsd">
    <Adapter name="BrpCallDiginetwerk">
        <Receiver name="BrpCallDiginetwerk">
            <JavaListener name="BrpCallDiginetwerk" />
        </Receiver>
        <Pipeline>
            <Exits>
                <Exit name="Exit" state="SUCCESS" />
                <Exit name="Exception" state="ERROR" />
            </Exits>

            <!-- required sessionKey: token -->

            <SenderPipe name="PostBRPPersonenBevragenDiginetwerk" getInputFromSessionKey="originalMessage" active="${isDiginetwerk}">
                <HttpSender url="${haalcentraal.BRP.personen.bevragen.endpoint}/personen" methodType="POST" headersParams="Authorization,Accept,Content-Type" parametersToSkipWhenEmpty="Accept,Content-Type" contentType="application/json" keystore="${haalcentraal_cert_path}" keystorePassword="${haalcentraal_cert_pass}" keystoreAlias="haalcentraal" keystoreType="PKCS12">
                    <Param name="Authorization" pattern="Bearer {token}">
                        <Param name="token" sessionKey="token"/>
                    </Param>
                    <Param name="Accept" sessionKey="headerAccept"/>
                    <Param name="Content-Type" sessionKey="headerContent-Type"/>
                </HttpSender>

                <Forward name="success" path="ExtractPersonenBody" />
                <Forward name="401" path="IfLoopPreventionPipe" />
                <Forward name="400" path="BadRequest" />
                <Forward name="403" path="Forbidden" />
                <Forward name="404" path="NotFound" />
                <Forward name="406" path="NotAcceptable" />
                <Forward name="415" path="UnsupportedMediaType" />
                <Forward name="429" path="TooManyRequest" />
                <Forward name="500" path="ServerError" />
                <Forward name="503" path="ServiceUnavailable" />
            </SenderPipe>
        </Pipeline>
    </Adapter>
</Module>