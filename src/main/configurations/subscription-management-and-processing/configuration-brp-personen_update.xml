<Module
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="../FrankConfig.xsd"> 
	<Adapter name="BrpPersonenUpdate"
		description="BrpPersonenUpdate">

		<Receiver name="BrpPersonenUpdate">
			<JavaListener name="BrpPersonenUpdate" />
		</Receiver>
        <Pipeline>
			<Exits>
				<Exit name="EXIT" state="SUCCESS" />
				<Exit name="EXCEPTION" state="ERROR" />
			</Exits>

			<PutInSessionPipe name="idInput">
				<Param name="id" xpathExpression="row/field[@name='ID']"/>
				<Forward name="success" path="dateInput"/>
			</PutInSessionPipe>

			<PutInSessionPipe name="dateInput">
				<Param name="date" xpathExpression="row/field[@name='DATE']"/>
				<Forward name="success" path="jsonInput"/>
			</PutInSessionPipe>

			<PutInSessionPipe name="jsonInput">
				<Param name="input" xpathExpression="row/field[@name='NOTIFICATION']"/>
				<Forward name="success" path="JsonToXmlInput"/>
			</PutInSessionPipe>

            <JsonPipe name="JsonToXmlInput" getInputFromSessionKey="input" storeResultInSessionKey="input">
                <Forward name="success" path="GetPersoon"/>
            </JsonPipe>

            <SenderPipe name="GetPersoon" storeResultInSessionKey="oldJSON" getInputFromSessionKey="input">
                <FixedQuerySender
					name="getPersonenSender"
                    queryType="SELECT"
					query="SELECT * FROM personen WHERE BURGERSERVICENUMMER=?{burgerservicenummer} ORDER BY date DESC LIMIT 1"
					datasourceName="jdbc/haalcentraal-connector-postgresql">
					<Param name="burgerservicenummer" xpathExpression="root/burgerservicenummer"/>
            	</FixedQuerySender> 
                <Forward name="success" path="PersonExists" />
                <Forward name="exception" path="EXCEPTION" />
            </SenderPipe>
            
            <XmlIfPipe
                name="PersonExists"
                xpathExpression="count(result/rowset/row) = 1"
            >
                <Forward name="then" path="appId"/>
                <Forward name="else" path="EXCEPTION"/>
                <Forward name="exception" path="EXCEPTION"/>
            </XmlIfPipe>
			
            <PutInSessionPipe 
                name="appId">
                <Param name="appIds" sessionKey="oldJSON" xpathExpression="result/rowset/row/field[@name='APPID']" />
                <Forward name="success" path="appToXml" />
            </PutInSessionPipe>

			<JsonPipe
                name="appToXml"
				getInputFromSessionKey="appIds"
                storeResultInSessionKey="appIdsXml">
                <Forward name="success" path="mappingStufToJson" />
            </JsonPipe>	

            <XsltPipe
                name="mappingStufToJson"
				getInputFromSessionKey="input"
                styleSheetName="mappings/personenRequest.xslt"
				skipEmptyTags="true"
                >
				<Param name="varZenderOrganisatie" xpathExpression="npsLv01/gelijk/zender/organisatie" />
                <Forward name="success" path="XmlToJson"/>
                <Forward name="error" path="EXCEPTION"/>
            </XsltPipe>

            <Json2XmlValidatorPipe
                name="XmlToJson"
                root="root"
                schema="mappings/checkInput.xsd"
                outputFormat="JSON"
                compactJsonArrays="false"
                storeResultInSessionKey="storeInput"
                throwException="true">
                <Forward name="success" path="PostBRPPersonenBevragen" />
            </Json2XmlValidatorPipe>


            <SenderPipe name="PostBRPPersonenBevragen" 
                storeResultInSessionKey="newJSON">
				<HttpSender
					url="https://proefomgeving.haalcentraal.nl/haalcentraal/api/brp/personen"
					methodType="POST"
					headersParams="X-API-KEY"
					contentType="application/json">
					<Param name="X-API-KEY" value="${X-API-KEY}"/>
				</HttpSender>

				<Forward name="success" path="PersoonToXml" />
				<Forward name="400" path="EXIT" />
				<Forward name="401" path="EXIT" />
				<Forward name="403" path="EXIT" />
				<Forward name="404" path="EXIT" />
				<Forward name="406" path="EXIT" />
				<Forward name="415" path="EXIT" />
				<Forward name="429" path="EXIT" />
				<Forward name="500" path="EXIT" />
				<Forward name="503" path="EXIT" />
			</SenderPipe>

            <JsonPipe name="PersoonToXml">
                <Forward name="success" path="hasBurgerservicenummer"/>
            </JsonPipe>
            
            <PutInSessionPipe 
                name="hasBurgerservicenummer">
                <Param name="burgerservicenummer" xpathExpression='//burgerservicenummer/text()' />
                <Forward name="success" path="JsonComparer" />
            </PutInSessionPipe>


			<SenderPipe name="JsonComparer"
                storeResultInSessionKey="json">
				<JavascriptSender
                    jsFileName="JSONcompare.js"
                    jsFunctionName="compareJSONFiles"
				>
				</JavascriptSender>
				<Param name="oldJSON" sessionKey="oldJSON" xpathExpression="result/rowset/row/field[@name='BODY']"/>
				<Param name="newJSON" sessionKey="newJSON"/>
				<Forward name="success" path="isSubset" />
				<Forward name="exception" path="EXIT" />
			</SenderPipe>

            <XmlIfPipe
                name="isSubset"
                regex="true"
            >
                <Forward name="then" path="deleteNotificationDate"/>
                <Forward name="else" path="InsertPersoon"/>
                <Forward name="exception" path="EXCEPTION"/>
            </XmlIfPipe>

            <SenderPipe name="InsertPersoon" getInputFromSessionKey="input">
                <FixedQuerySender
					name="insertPersonenSender"
					query="INSERT INTO personen VALUES(?,?,?,CURRENT_TIMESTAMP)"
					datasourceName="jdbc/haalcentraal-connector-postgresql">
					<Param name="burgerservicenummer" sessionKey="burgerservicenummer"/>
					<Param name="body" sessionKey="json"/>
					<Param name="appId" sessionKey="appIds"/>
            	</FixedQuerySender>
                <Forward name="success" path="deleteNotificationId" />
            </SenderPipe>

            <SenderPipe name="deleteNotificationId" storeResultInSessionKey="delete" getInputFromSessionKey="input">
                <FixedQuerySender
					name="deleteNotification"
					query="DELETE FROM notifications WHERE id=?{idNotification}"
					datasourceName="jdbc/haalcentraal-connector-postgresql">
					<Param name="idNotification" sessionKey="id" type="INTEGER"/>
            	</FixedQuerySender> 
                <Forward name="success" path="jsonToXml" />
                <Forward name="exception" path="EXCEPTION" />
            </SenderPipe>

			<JsonPipe
                name="jsonToXml"
				getInputFromSessionKey="json"
				storeResultInSessionKey="xmlbody">
                <Forward name="success" path="GetApplicationConfigFromLocalFS" />
            </JsonPipe>	

            <SenderPipe 
                name="GetApplicationConfigFromLocalFS"
                storeResultInSessionKey="ApplicationConfig"
                >
                <IbisLocalSender
                    name="CallImportFromLocalFS"
                    javaListener="ImportFromLocalFS"
                    returnedSessionKeys="Error">
                    <Param name="FileName" value="${FilePath_1}" />
                </IbisLocalSender>
                <Forward name="success" path="filter"/>
                <Forward name="error" path="EXCEPTION"/>
            </SenderPipe>

            <XsltPipe
                name="filter"
				getInputFromSessionKey="ApplicationConfig"
                styleSheetName="mappings/app.xslt"
                >
				<Param name="appIds" sessionKey="appIdsXml" type="DOMDOC"/>
                <Forward name="success" path="forloop"/>
                <Forward name="error" path="EXIT"/>
            </XsltPipe>

			<ForEachChildElementPipe name="forloop"
				elementXPathExpression="root/app">
				<IbisLocalSender
					name="BRP Personen callback sender"
					javaListener="BRP Personen callback sender"
					>
                    <Param name="body" sessionKey="xmlbody"/>
				</IbisLocalSender>
				<Forward name="success" path="EXIT" />
                <Forward name="error" path="EXCEPTION"/>
			</ForEachChildElementPipe>

            <SenderPipe name="deleteNotificationDate" getInputFromSessionKey="input">
                <FixedQuerySender
					name="deleteNotification"
					query="DELETE FROM notifications WHERE id=?{idNotification} AND date &lt; NOW() - INTERVAL '3 DAY'"
					datasourceName="jdbc/haalcentraal-connector-postgresql">
					<Param name="idNotification" sessionKey="id" type="INTEGER"/>
            	</FixedQuerySender> 
                <Forward name="success" path="EXIT" />
                <Forward name="exception" path="EXCEPTION" />
            </SenderPipe>
        </Pipeline>
    </Adapter>
</Module>