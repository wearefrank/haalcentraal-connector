<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.8.xsd">

	<!-- When using one of the following commands, a rollback script is not required
AddColumn
AddDefaultValue
AddForeignKeyConstraint
AddLookupTable
AddNotNullConstraint
AddPrimaryKey
AddUniqueConstraint
CreateIndex
CreateSequence
CreateTable
CreateView
DropNotNullConstraint
RenameColumn
RenameTable
RenameView
TagDatabase
 -->

	<!-- ChangeSet 1: Create 'Persoonsgegevens' table -->
	<changeSet id="HCC-1" author="Vincent de Gans">
		<comment>Create the 'Persoonsgegevens' table</comment>
		<createTable tableName="persoonsgegevens">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="bsn" type="int" />
			<column name="data" type="text" />
			<column name="registratie_datum" type="datetime" />
		</createTable>
		<addAutoIncrement tableName="persoonsgegevens" columnName="id" />
	</changeSet>

	<!-- ChangeSet 2: Create 'Applicaties' table -->
	<changeSet id="HCC-2" author="Vincent de Gans">
		<comment>Create the 'Applicaties' table</comment>
		<createTable tableName="applicaties">
			<column name="id" type="varchar(255)">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="naam" type="varchar(255)" />
			<column name="organisatie" type="varchar(255)" />
			<column name="callback_url" type="varchar(2048)" />
			<column name="sleutel_verzendend" type="text" />
		</createTable>
	</changeSet>

	<!-- ChangeSet 3: Create 'Subscripties' table -->
	<changeSet id="HCC-3" author="Vincent de Gans">
		<comment>Create the 'Subscripties' table</comment>
		<createTable tableName="subscripties">
			<column name="id" type="int">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="bsn" type="int" />
			<column name="app_id" type="varchar(255)" />
			<column name="begin_datum" type="datetime" />
			<column name="eind_datum" type="datetime" />
		</createTable>
		<addAutoIncrement tableName="subscripties" columnName="id" />
	</changeSet>

    <changeSet id="HCC-4" author="Vincent de Gans">
		<preConditions onFail="HALT">
			<dbms type="postgresql"/>
		</preConditions>
		<sql>
			CREATE TABLE tasks (
				task_id SERIAL NOT NULL,
				created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL,
				scheduled_start TIMESTAMP DEFAULT CURRENT_TIMESTAMP NOT NULL,  -- Default value set to time of insertion
				status CHAR(1) DEFAULT 'P' NOT NULL, -- Default state is P (pending)
				is_retry BOOLEAN NOT NULL DEFAULT FALSE,
				message TEXT NOT NULL,
				PRIMARY KEY (task_id, is_retry)  -- Include is_retry in the primary key
			) PARTITION BY LIST (is_retry);
	
			-- Create the partition for hourly tasks (is_retry = FALSE)
			CREATE TABLE tasks_hourly PARTITION OF tasks FOR VALUES IN (FALSE);
	
			-- Create the partition for daily tasks (is_retry = TRUE)
			CREATE TABLE tasks_daily PARTITION OF tasks FOR VALUES IN (TRUE);
	
			-- Create indexes on scheduled_start for each partition for performance optimization
			CREATE INDEX idx_tasks_hourly_scheduled_start ON tasks_hourly (scheduled_start);
			CREATE INDEX idx_tasks_daily_scheduled_start ON tasks_daily (scheduled_start);
		</sql>
	</changeSet>
</databaseChangeLog>