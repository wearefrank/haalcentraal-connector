<Module xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../FrankConfig.xsd">
    <Adapter name="BrpGetVolgindicatiesWithBSN" active="${brp.update.enabled}">
        <Receiver name="BrpGetVolgindicatiesWithBSN">
            <JavaListener name="BrpGetVolgindicatiesWithBSN" />
        </Receiver>
        <Pipeline>
            <Exits>
                <Exit name="Exit" state="SUCCESS" />
                <Exit name="Exception" state="ERROR" />
                <Exit name="BadRequest" state="ERROR" code="400" />
                <Exit name="NotAuthorized" state="ERROR" code="401" />
                <Exit name="Forbidden" state="ERROR" code="403" />
                <Exit name="NotFound" state="ERROR" code="404" />
                <Exit name="NotAcceptable" state="ERROR" code="406" />
                <Exit name="UnsupportedMediaType" state="ERROR" code="415" />
                <Exit name="TooManyRequest" state="ERROR" code="429" />
                <Exit name="ServerError" state="ERROR" code="500" />
                <Exit name="ServiceUnavailable" state="ERROR" code="503" />
            </Exits>

            <IfPipe name="ValidateBSN" xpathExpression="string-length($burgerservicenummer) = 9 and matches($burgerservicenummer, '^\d{9}$')" expressionValue="true" getInputFromFixedValue="&lt;dummy/&gt;" preserveInput="true">
                <Param name="burgerservicenummer" sessionKey="burgerservicenummer" />
                <Forward name="then" path="GetBRPVolgindicatiesWithBSN" />
                <Forward name="else" path="BadRequest" />
            </IfPipe>

            <SenderPipe name="GetBRPVolgindicatiesWithBSN">
                <HttpSender methodType="GET" headersParams="X-API-KEY,Accept,Content-Type"
                    parametersToSkipWhenEmpty="Accept,Content-Type" contentType="application/json">
                    <Param name="url" xpathExpression="concat('${endpoint.brp.mock.test}/volgindicaties/', $burgerservicenummer)" value="&lt;dummy/&gt;">
                        <Param name="burgerservicenummer" sessionKey="burgerservicenummer" />
                    </Param>
                    <Param name="X-API-KEY" value="d8ZCxIm65WH7CMGYaTFZLpGgVZZOMvx3" hidden="true" />
                    <Param name="Accept" sessionKey="headerAccept" />
                    <Param name="Content-Type" sessionKey="headerContent-Type" />
                </HttpSender>

                <Forward name="success" path="Exit" />
                <Forward name="400" path="BadRequest" />
                <Forward name="401" path="NotAuthorized" />
                <Forward name="403" path="Forbidden" />
                <Forward name="404" path="NotFound" />
                <Forward name="406" path="NotAcceptable" />
                <Forward name="415" path="UnsupportedMediaType" />
                <Forward name="429" path="TooManyRequest" />
                <Forward name="500" path="ServerError" />
                <Forward name="503" path="ServiceUnavailable" />
            </SenderPipe>
        </Pipeline>
    </Adapter>
</Module>